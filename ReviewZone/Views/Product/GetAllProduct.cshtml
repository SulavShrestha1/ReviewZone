@model IEnumerable<ReviewZone.Models.ProductModel>

@{
    ViewBag.Title = "GetAllProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/CSS/ProductList.css" rel="stylesheet" />
<main id="clx-page-content" role="main" class="page-content ">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-hdr">
                    <h2>Products</h2>
                    <div class="panel-toolbar">
                        <div class="btn-group">
                            <a href="@Url.Action("Create", "Product")" class="btn btn-sm btn-primary waves-effect waves-themed"> New Product</a>
                        </div>
                    </div>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="table-responsive" id="ib_data_panel">
                            <div id="clx_datatable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                                <div class="row">
                                    <div class="mat-elevation-z8">
                                        <table class="table table-striped table-dark table-hover" id="dataTable">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.ItemNumber)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Image)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Name)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.UnitPrice)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Category)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Brand)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Color)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.TotalInStock)
                                                    </th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.ItemNumber)
                                                        </td>
                                                        <td>
                                                            <img src="@Url.Content(item.Image)" width="70" height="70" onerror="this.onerror = null; this.src = '/Images/default_Product.png';"/>
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.UnitPrice)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Category)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Brand)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Color)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.TotalInStock)
                                                        </td>
                                                        <td id="action">
                                                            <a href="@Url.Action("Edit", "Product", new { id = item.ItemNumber })" class="btn btn-primary btn-icon waves-effect waves-themed has-tooltip">
                                                                <i class="fas fa-pencil-alt"></i>
                                                            </a> |
                                                            <a href="@Url.Action("Details", "Product", new { id = item.ItemNumber })" class="btn btn-info btn-icon waves-effect waves-themed has-tooltip">
                                                                <i class="fab fa-product-hunt">
                                                                </i>
                                                            </a>

                                                        </td>
                                                    </tr>
                                                 }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

