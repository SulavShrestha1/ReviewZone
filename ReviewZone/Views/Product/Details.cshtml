@model ReviewZone.Models.ProductModel

@{ ViewBag.Title = "Details";
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/CSS/ProductDetails.css" rel="stylesheet" />
<section class="section-products">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-8 col-lg-6">
                <div class="header-content">
                    <h3>Product Details</h3>
                    <h2>
                        @Html.DisplayFor(model => model.Name)'s Details
                    </h2>
                </div>
            </div>
        </div>
        <div class="height d-flex justify-content-center align-items-center">
            <div class="card p-3">
                <div class="d-flex justify-content-between align-items-center ">
                    <div class="mt-2">
                        <h1>
                            @Html.DisplayFor(model => model.ItemNumber)
                        </h1>
                        <h4 class="text-uppercase">@Html.DisplayFor(model => model.Brand)</h4>
                        <div class="mt-5">
                            <h5 class="text-uppercase mb-0">
                                @Html.DisplayFor(model => model.Category)
                            </h5>
                            <h1 class="main-heading mt-0">
                                @Html.DisplayFor(model => model.Name)
                            </h1>
                            <h5 class="mt-0">
                                Price: @Html.DisplayFor(model => model.UnitPrice)
                            </h5>
                        </div>
                    </div>
                    <div class="image"> <img src="@Url.Content(Model.Image)" width="100" onerror="this.onerror = null; this.src = '/Images/default_Product.png';"/> </div>
                </div>
                <p>
                    @Html.DisplayFor(model => model.Description)
                </p>
                <a href="@Url.Action("Edit", "Product", new { id = Model.ItemNumber })">
                    <button class="btn btn-danger">Edit Product</button>
                </a>
            </div>
        </div>
        </div></section>

