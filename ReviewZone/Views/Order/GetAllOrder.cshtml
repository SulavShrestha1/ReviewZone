@model IEnumerable<ReviewZone.Models.OrderModel>

@{
    ViewBag.Title = "GetAllOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/CSS/OrderList.css" rel="stylesheet" />
<main id="clx-page-content" role="main" class="page-content ">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-hdr">
                    <h2>Order</h2>
                    <div class="panel-toolbar">
                        <div class="btn-group">
                            @Html.ActionLink("Add Order", "Create", null,
                            new { @class = "btn btn-sm btn-primary waves-effect waves-themed" })
                        </div>
                    </div>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="table-responsive" id="ib_data_panel">
                            <div id="clx_datatable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                                <div class="row">
                                    <div class="mat-elevation-z8">
                                        <table class="table table-striped table-dark table-hover" id="dataTable">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Emp_ID)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Customer_ID)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Status)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.BillingCycle)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Total)
                                                    </th>
                                                    <th>
                                                        Actions
                                                    </th>
                                                </tr>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Employee.FullName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Customer.FullName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Status)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.BillingCycle)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Total)
                                                    </td>
                                                    <td id="action">
                                                        <a href="@Url.Action("Edit", "Order", new { id = item.Order_ID })" class="btn btn-primary btn-icon waves-effect waves-themed has-tooltip">
                                                            <i class="fas fa-pencil-alt">
                                                            </i>
                                                        </a> |
                                                        <a href="@Url.Action("Details", "Order", new { id = item.Order_ID })" class="btn btn-info waves-effect waves-themed has-tooltip">
                                                            <i class="fas fa-shopping-bag">
                                                            </i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>