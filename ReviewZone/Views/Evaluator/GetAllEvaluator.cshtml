@model IEnumerable<ReviewZone.Models.EvaluatorModel>

@{
    ViewBag.Title = "GetAllEvaluator";
}

<link href="~/Content/CSS/EmployeeList.css" rel="stylesheet" />
<main id="clx-page-content" role="main" class="page-content ">
    <div class="subheader">
        <h1 class="subheader-title">
            <i class="fas fa-user-friends"></i> Evaluator <span class="fw-300"></span>
        </h1>
        <div class="subheader-block d-lg-flex align-items-center">
            <a href="@Url.Action("Create", "Evaluator")" class="btn btn-primary waves-effect waves-themed">Add an Evaluator</a>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
<div class="col-lg-4">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <div class="text-center">
                    <img alt="image" class="rounded-circle m-t-xs img-fluid avatar-xl mb-4" src="@Url.Content(item.Employee.Image)" onerror="this.onerror = null; this.src = '/Images/default_Employee.png';">
                    <h3><strong>@Html.DisplayFor(modelItem => item.FullName)</strong></h3>
                    <div class="m-t-xs text-muted">
                        @Html.DisplayFor(model => item.Designation)
                    </div>
                    <p>
                        <i class="fas fa-at"></i>
                        @Html.DisplayFor(model => item.Employee.Email)
                    </p>
                    <address>
                        <strong>
                            @Html.DisplayFor(model => item.Employee.PayFrequency)
                            | <span class="amount text-success">
                                $@Html.DisplayFor(model => item.Employee.Salary)
                            </span>
                        </strong>
                        <br>
                        <strong>Date joined: </strong>
                        <span class="text-warning">
                            @Html.DisplayFor(modelItem => item.Employee.Date)
                        </span>
                        <br>
                        <div class="hr-line-dashed">
                        </div>

                        @Html.DisplayFor(modelItem => item.Employee.Address), <br>

                        @Html.DisplayFor(modelItem => item.Employee.City)
                        @Html.DisplayFor(modelItem => item.Employee.State)
                        @Html.DisplayFor(modelItem => item.Employee.Zip) <br>
                        @Html.DisplayFor(modelItem => item.Employee.Country) <br>
                        <abbr title="Phone">P:</abbr>
                        @Html.DisplayFor(modelItem => item.Employee.PhoneNumber)
                    </address>
                    <div>
                        <a href="@Url.Action("Edit", "Evaluator", new { id = item.Evaluator_ID })" class="btn btn-warning waves-effect waves-themed">View</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>}
    </div>
</main>