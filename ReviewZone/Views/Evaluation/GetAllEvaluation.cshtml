@model IEnumerable<ReviewZone.Models.EvaluationModel>

@{
    ViewBag.Title = "GetAllEvaluation";
}

<link href="~/Content/CSS/AccountList.css" rel="stylesheet" />
<main id="clx-page-content" role="main" class="page-content ">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-hdr">
                    <h2>Evaluations</h2>
                    <div class="panel-toolbar">
                        <div class="btn-group">
                            <a href="@Url.Action("Create", "Evaluation")" class="btn btn-sm btn-primary waves-effect waves-themed"> New Evaluation</a>
                        </div>
                    </div>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="table-responsive" id="ib_data_panel">
                            <div id="clx_datatable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                                <div class="row">
                                    <div class="mat-elevation-z8">
                                        <table class="table table-striped table-dark table-hover" id="dataTable">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Evaluation_ID)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Emp_ID)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Task_ID)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Evaluator_ID)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Date)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Performance)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Remarks)
                                                    </th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Evaluation_ID)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Employee.FullName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Task.TaskName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Evaluator.FullName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Date)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Performance)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Remarks)
                                                    </td>
                                                    <td id="action">
                                                        @if (User.Identity.IsAuthenticated)
                                                        {
                                                            if (User.IsInRole("admin") || User.IsInRole("evaluator"))
                                                            {
                                                                <a href="@Url.Action("Edit", "Evaluation", new { id = item.Evaluation_ID })" class="btn btn-primary btn-icon waves-effect waves-themed has-tooltip">
                                                                    <i class="fas fa-pencil-alt">
                                                                    </i>
                                                                </a> 
                                                            }
                                                        } |
                                                        <a href = "@Url.Action("Details", "Evaluation", new { id = item.Evaluation_ID })" class="btn btn-info btn-icon waves-effect waves-themed has-tooltip">
                                                               <i class="fas fa-tasks">
                                                            </i>
                                                        </a>
                                                    </td>
                                                  </tr>
                                                 }


</tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

