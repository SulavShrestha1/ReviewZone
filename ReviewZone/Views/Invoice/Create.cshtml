                                    <table class="table table-bordered table-striped table-hover invoice-table" id="invoice_items">
                                        <thead>
                                            <tr>
                                                <th width="30%">Item Name</th>
                                                <th width="10%">Quantity</th>
                                                <th width="15%">Price</th>
                                                <th>Discount</th>
                                                <th width="20%">Tax</th>
                                                <th width="15%">Total</th>
