                                                            @Html.EditorFor(model => model.CreatedOn, new { htmlAttributes = new { @Value = @DateTime.Now, @class = "form-control", @readonly = "readonly" } })
                                                            @Html.ValidationMessageFor(model => model.CreatedOn, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
