                                <br>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</main>

<script>
    $(document).ready(function () {

        $("#Quantity,#Price").change(function () {
            var q = parseFloat($("#Quantity").val());
            var p = parseFloat($("#Price").val());
            var t = (q * p);
            $("#Tot").val(t);

        });

        $("#Discount").change(function () {
            var d = parseFloat($("#Discount").val());
            var tt = parseFloat($("#Tot").val());
            var tot = (tt - ((d / 100) * tt));
            $("#Tot").val(tot);
        });

        $("#btnAdd").click(function (e) {
            e.preventDefault();
            $("#invoice_items").append("<tr><td>" + $('#ItemNumber').val() + "</td><td>" + $('#Quantity').val() + "</td><td>" + $('#Price').val() + "</td><td>" + $('#Discount').val() + "</td><td>" + $('#Tax').val() + "</td><td>" + $('#Tot').val() + `</td><td><button type="button" class="btn btn-danger waves-effect waves-themed" id="btnRemove" style="display: block;"><i class="fas fa-minus-circle"></i> Delete</button></td></tr></body>`);
            calculations()

        });

        function calculations() {
            var TotalAmount = 0;
            var Sub_Total = 0;
            var Discount = 0;
            var Tax = 0.00;
            $('#invoice_items tr').each(function (index, tr) {
                $(tr).each(function () {

                    var $Quantity = $(tr).find('td:eq(1)').text();

                    var $Price = $(tr).find('td:eq(2)').text();

                    var $Discount = $(tr).find('td:eq(3)').text();

                    var $TotalAmount = $(tr).find('td:eq(5)').text();

                    var $subtotal = 0;
                    var $discount = 0;

                    $subtotal = $Quantity * $Price;

                    $discount = (($Discount / 100) * $subtotal);

                    Discount += $discount;

                    Sub_Total += $subtotal;

                    TotalAmount += Number($TotalAmount);

                    $("#Quantity").val(0);
                    $("#Price").val(0);
                    $("#Discount").val(0);
                    $("#Tot").val(0);

                });
            });
            $("#Sub_Total").val(Sub_Total.toFixed(2))
            $("#DiscountAmount").val(Discount.toFixed(2))
            $("#TaxAmount").val(Tax.toFixed(2))
            $("#Total").val(TotalAmount.toFixed(2))
        }

        $("#invoice_items").on('click', '#btnRemove', function () {
            $(this).closest('tr').remove();
            calculations();
        });
        $("#submit").click(function (e) {
            e.preventDefault();
            SaveRecords();
        });


    });

    function SaveRecords() {

        var listOfInvoiceDetailsModel = [];
        $('#invoice_items tr').each(function (index, tr) {
            var obj = {}

            $(tr).each(function () {
                obj['ItemNumber'] = $(tr).find('td:eq(0)').text();
                obj['Quantity'] = $(tr).find('td:eq(1)').text();
                obj['Price'] = $(tr).find('td:eq(2)').text();
                obj['Discount'] = $(tr).find('td:eq(3)').text();
                obj['Tax'] = $(tr).find('td:eq(4)').text();
                obj['Total'] = $(tr).find('td:eq(5)').text();

            });
            listOfInvoiceDetailsModel.push(obj);
        });

        var Customer_ID = $("#Customer_ID").val();
        var Emp_ID = $("#Emp_ID").val();
        var Status = $("#Status").val();
        var Title = $("#Title").val();
        var Address = $("#Address").val();
        var OrderDate = $("#OrderDate").val();
        var CreatedOn = $("#CreatedOn").val();
        var DueDate = $("#DueDate").val();
        var Sub_Total = $("#Sub_Total").val();
        var DiscountAmount = $("#DiscountAmount").val();
        var TaxAmount = $("#TaxAmount").val();
        var Total = $("#Total").val();


        listOfInvoiceDetailsModel.shift();

        var model = {
            "ItemDetails": listOfInvoiceDetailsModel,
            "Customer_ID": Customer_ID,
            "Emp_ID": Emp_ID,
            "Status": Status,
            "Title": Title,
            "Address": Address,
            "OrderDate": OrderDate,
            "CreatedOn": CreatedOn,
            "DueDate": DueDate,
            "Sub_Total": Sub_Total,
            "DiscountAmount": DiscountAmount,
            "TaxAmount": TaxAmount,
            "Total": Total,
        }


        $.ajax({
            type: "Post",
            url: "/Invoice/Create",
            data: JSON.stringify(model),
            /*            datatype: "json",*/
            cache: false,
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data.success) {
                    swal("Invoice Created!",data.responseText, {
                        icon: "success",
                    }).then(function () {
                        window.location.href = "/Invoice/GetAllInvoice"
                    });
                } else {
                    swal("Invalid inputs!", data.responseText, "error");
                }

            },
            error: function (xhr) {
                alert('No Valid Data');
            }
        });
    }

    const myDatePicker = MCDatepicker.create({
        el: '#OrderDate'
    })

    const myDatePicker2 = MCDatepicker.create({
        el: '#DueDate',
    })
</script>




